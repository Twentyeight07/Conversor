<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Conversor.Views.MainMenu"
             NavigationPage.HasNavigationBar="False">
    <StackLayout BackgroundColor="#581845">
        <Label Text="Conversor"
               FontSize="40"
               FontAttributes="Bold"
               TextColor="White"
               Margin="0,20,0,0"
               HorizontalOptions="Center" />
        <Frame VerticalOptions="FillAndExpand"
               Margin="20"
               CornerRadius="15"
               HasShadow="False">
            <StackLayout VerticalOptions="Center"
                         Spacing="20">
                <Image Source="ruler.png" />
                <Label Text="(cm) a (m)"
                       FontAttributes="Bold"
                       FontSize="40"
                       HorizontalOptions="Center" />
                <Button Text="Iniciar"
                        TextTransform="None"
                        CornerRadius="10"
                        FontSize="Medium"
                        FontAttributes="Bold" 
                        x:Name="btnStart"
                        Clicked="btnStart_Clicked"
                        />
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>